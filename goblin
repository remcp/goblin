                    else if (move == 2)
                    {
                        Console.WriteLine("you blocked too slow..");
                        stats = n.damage(stats, goblinstats);
                        if (stats[0] <= 0)
                        {
                            goto dead;
                        }
                    }
                    else if (move == 3 & special == true)
