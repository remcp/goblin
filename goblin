                    {
                        goblin_alive = false;
                        Console.WriteLine();
                        Console.WriteLine();
                        Console.WriteLine();
                        Console.WriteLine("goblin dies");
                        Console.ReadLine();
                        stats = n.Resethealth(stats, defaulthealth);
                        lvlupcheck = lvl;
                        xp = n.xp(xp, 5);
                        lvl = n.lvl(xp, lvl, stats);
