                spin--;
                if(spin < 0 ) {spin = 0;}
                Console.WriteLine();
                Console.WriteLine();
                Console.WriteLine("yeah no clue what spinning was supposed to accomplish");
                Console.ReadLine();
                Console.Clear();
                goto boxes;
            }
            if (keuze == 1221 & spins == true)
            {
             area2 = 3;
            }


            Console.Clear();


            return area2;
        }


